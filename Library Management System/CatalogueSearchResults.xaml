<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Management_System.CatalogueSearchResults"
             Title="CatalogueSearchResults">
    <VerticalStackLayout>
        <!--Top bar of application.-->
        <Grid>
            <!--Defining the columns for the table grid at top of program-->
            <Grid.ColumnDefinitions>
                <!--The column for the Calgary Public Library Logo and Search Text-->
                <ColumnDefinition
                    Width="Auto"
                />
                <!-- The column for the Spacer between the Calgary Public Library logo and the Log-In Button-->
                <ColumnDefinition
                    Width="*"
                />
                <!-- The column for the Log-In Button-->
                <ColumnDefinition
                    Width="Auto"
                />
            </Grid.ColumnDefinitions>

            <!--Defining the rows for the table grid at top of program-->
            <Grid.RowDefinitions>
                <!-- The row for the top bar which has the Calgary Public Library Logo, and Log-In Button.-->
                <RowDefinition
                    Height="50"
                ></RowDefinition>
                <!-- A spacer row-->
                <RowDefinition
                    Height="10"
                ></RowDefinition>
                <!-- The row for the search label, entry box, and search button.-->
                <RowDefinition
                    Height="50"
                ></RowDefinition>
            </Grid.RowDefinitions>

            <!--Populating the first column first row of the grid-->
            <Image
                Grid.Column="0"
                Grid.Row="0"
                Source="cpl_logo.png"
                WidthRequest="150"
            ></Image>

            <!--Populating the second column first row of the grid-->
            <BoxView
                Grid.Column="1"
                Grid.Row="0"
                WidthRequest="0"
                HeightRequest="0"
            ></BoxView>

            <!--Populating the third column first row of the grid-->
            <Button
                Grid.Column="2"
                Grid.Row="0"
                WidthRequest="100"
                HeightRequest="50"
                BackgroundColor="DarkCyan"
                Margin="10,0,10,0"
                Text="Log-In"
                Clicked="Login_Clicked"
            ></Button>

            <!--Populating the first column second row of the grid-->
            <Label
                Grid.Column="0"
                Grid.Row="2"
                Text="Search"
                WidthRequest="150"
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalTextAlignment="Center"
            ></Label>

            <!--Populating the second column second row of the grid-->
            <Entry
                Grid.Column="1"
                Grid.Row="2"
                Placeholder="Search our catalogue..."
            ></Entry>

            <!--Populating the third column third row of the grid-->
            <Button
                Grid.Column="2"
                Grid.Row="2"
                WidthRequest="100"
                HeightRequest="50"
                BackgroundColor="DarkCyan"
                Margin="10,0,10,0"
                Text="Search"
                Clicked="Search_Clicked"
            ></Button>
        </Grid>
        <VerticalStackLayout>
            <Label
                Text="Recommended by our Librarian Ben"
                FontAttributes="Bold"
                Margin="30,25,0,0"
                FontSize="Medium"
                ></Label>
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout>
                    <!--Book #1-->
                    <VerticalStackLayout
                        WidthRequest="200"
                        Margin="30,25,0,0"
                        >
                        <Image
                                x:Name="Book1Image"
                            ></Image>
                        <Label
                                x:Name="Book1Title"
                            ></Label>
                        <Label
                                x:Name="Book1Author"
                            ></Label>
                        <Label
                                x:Name="Book1ISBN"
                            ></Label>
                        <Button
                                Text="Place Hold"
                                FontSize="Medium"
                                FontAttributes="Bold"
                                BackgroundColor="DarkGreen"
                            ></Button>
                    </VerticalStackLayout>
                    <!--Closing Book #1-->
                    <!--Book #2-->
