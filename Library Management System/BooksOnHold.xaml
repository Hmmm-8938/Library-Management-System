<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Management_System.BooksOnHold"
             Title="BooksOnHold">
    <ListView x:Name="OnHoldList" BackgroundColor="Gray" >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <VerticalStackLayout Padding="10">
                        <HorizontalStackLayout>
                            <Image WidthRequest="50" HeightRequest="100" Source="{Binding Cover}"></Image>
                        </HorizontalStackLayout>
                        <Label Text="{Binding Title}"></Label>
                        <Label Text="{Binding Author}"></Label>
                        <Label Text="{Binding Isbn}"></Label>
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>