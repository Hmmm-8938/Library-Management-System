<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Management_System.UserView"
             Title="UserView">
    <ListView x:Name="UserList" BackgroundColor="Gray" >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding FirstName}"></Label>
                        <Label Text="{Binding LastName}"></Label>
                        <Label Text="{Binding UserID}"></Label>
                        <Label Text="{Binding PhoneNumber}"></Label>
                        <Label Text="{Binding Email}"></Label>
                        <Label Text="{Binding DOB}"></Label>
                        <Label Text="{Binding Balance}"></Label>
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>