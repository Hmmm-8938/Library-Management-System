<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Management_System.CheckInBooks"
             Title="CheckInBooks">
    <VerticalStackLayout Margin="15">
        <Label x:Name="CheckInLabel" Text="Enter Book ID:" Margin="5" HorizontalOptions="Center"/>
        <Entry x:Name="CheckInEntry" Placeholder="Book ID" WidthRequest="300" HorizontalOptions="Center" Margin="5" />
        <Button
            x:Name="CheckInBtn"
            WidthRequest="100"
            HeightRequest="50"
            BackgroundColor="DarkCyan"
            Margin="10"
            Text="Check In"
            Clicked="CheckIn_Clicked"
        ></Button>
    </VerticalStackLayout>
</ContentPage>