    <StackLayout VerticalOptions="StartAndExpand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    --><!-- Column for the Image --><!--
                    <ColumnDefinition Width="*" />
                    --><!-- Column for the Spacer --><!--
                    <ColumnDefinition Width="Auto" />
